{
  "extends": "./tsconfig",
  "compilerOptions": {
    "outDir": "api/dist",
    "noEmit": false,
    "noEmitOnError": true,
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["./src/*"],
      "@api/*": ["./api/src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": ["api/*.d.ts", "api/src"]
}
